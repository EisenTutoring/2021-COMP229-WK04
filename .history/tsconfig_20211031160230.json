{
    "compilerOptions": 
    {
        "target": "ES6",    //Compiles to Javascript ES6
        "module": "CommonJS",   //Using CommonJS Module
        "sourceMap": true,
        "noImplicitAny": true,
        "alwaysStrict":true,
        "removeComments": true,
        "esModuleInterop": true,
        "moduleResolution": "Node"
    },
    "exclude": 
    [
        "node_modules"
    ]
}